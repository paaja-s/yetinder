{% extends 'base.html.twig' %}

{% block body %}
<div class="text-left max-w-md mx-auto">
	<h2 class="text-2xl font-bold text-gray-800 mb-6">Přidat nového Yettiho</h2>
	<form action="{{ path('person_add') }}" method="POST" class="space-y-4 bg-white p-6 rounded-lg shadow-md">
		<div class="flex flex-col">
			<label for="first_name" class="text-gray-700 font-semibold">Jméno:</label>
			<input type="text" id="first_name" name="first_name" required
				class="mt-1 px-3 py-2 border rounded focus:outline-none focus:border-blue-500">
		</div>

		<div class="flex flex-col">
			<label for="last_name" class="text-gray-700 font-semibold">Příjmení:</label>
			<input type="text" id="last_name" name="last_name" required
				class="mt-1 px-3 py-2 border rounded focus:outline-none focus:border-blue-500">
		</div>

		<div class="flex flex-col">
			<label for="sex">Pohlaví:</label>
			<select id="sex" name="sex" required>
				{% for sex in sexOptions %}
				<option value="{{ sex.value }}">{{ sex.label() }}</option>
				{% endfor %}
			</select>
		</div>

		<div class="flex flex-col">
			<label for="address" class="text-gray-700 font-semibold">Bydliště:</label>
			<input type="text" id="address" name="address"
				class="mt-1 px-3 py-2 border rounded focus:outline-none focus:border-blue-500">
		</div>

		<div class="flex flex-col">
			<label for="height" class="text-gray-700 font-semibold">Výška (cm):</label>
			<input type="number" id="height" name="height" min="0"
				class="mt-1 px-3 py-2 border rounded focus:outline-none focus:border-blue-500">
		</div>

		<div class="flex flex-col">
			<label for="weight" class="text-gray-700 font-semibold">Váha (kg):</label>
			<input type="number" id="weight" name="weight" min="0"
				class="mt-1 px-3 py-2 border rounded focus:outline-none focus:border-blue-500">
		</div>

		<button type="submit"
			class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600 focus:outline-none transition-all duration-300">
			Přidat
		</button>
	</form>
</div>
{% endblock %}
